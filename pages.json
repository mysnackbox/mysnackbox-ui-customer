{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页"
			}
		},
		{
			"path": "pages/center/index",
			"style": {
				"navigationBarTitleText": "账户"
			}
		}, {
			"path": "pages/auth/login",
			"style": {
				"navigationBarTitleText": "授权登录",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/auth/updatePhone",
			"style": {
				"navigationBarTitleText": "补全手机号",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/goods/goodsList",
			"style": {
				"navigationBarTitleText": "商品库",
				"enablePullDownRefresh": true
			}

		}, {
			"path": "pages/goods/addGoods",
			"style": {
				"navigationBarTitleText": "添加新商品",
				"enablePullDownRefresh": false
			}

		},  {
			"path": "pages/terminal/goodsList",
			"style": {
				"navigationBarTitleText": "设备商品列表",
				"enablePullDownRefresh": true
			}

		},  {
			"path": "pages/center/userInfo",
			"style": {
				"navigationBarTitleText": "详细信息",
				"enablePullDownRefresh": false
			}

		}, {
			"path": "pages/order/order",
			"style": {
				"navigationBarTitleText": "订单",
				"enablePullDownRefresh": true
			}

		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "我的小卖部运营商",
		"navigationBarBackgroundColor": "#2979ff",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#909399",
		"selectedColor": "#303133",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [{
			"pagePath": "pages/index/index",
			"iconPath": "static/index.png",
			"selectedIconPath": "static/index-selected.png",
			"navigationBarTitleText": "首页",
			"text": "首页"
		}, {
			"pagePath": "pages/center/index",
			"iconPath": "static/center.png",
			"selectedIconPath": "static/center-selected.png",
			"text": "账户"
		}]
	}
}
